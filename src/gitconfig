[user]
  name = Nic Haynes
  email = nic@nicinabox.com

[core]
  editor = nvim
  excludesfile = ~/.gitignore

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  cp = cherry-pick
  df = diff
  dc = diff --cached
  wdiff = diff -w --word-diff-regex=. --color-words -U0
  lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --abbrev-commit --date=relative --format=format:'%C(red)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  ls = ls-files
  latest-tag = describe --tags --abbrev=0
  lg-latest = "!f() { \
    git log `git latest-tag`..HEAD --format='%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s' --date=relative; \
  }; f"

  br-clean = "!f() { \
    git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; \
  }; f"

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
  timeline = log --oneline --graph --decorate

  wip = "!f() { git add . && git ci -m 'WIP'; }; f"
  unwip = reset HEAD~1

[color]
  ui = true

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"

[branch]
  autosetuprebase = always

[push]
  default = simple

[credential]
  helper = osxkeychain

[help]
  autocorrect = 1

[github]
  user = nicinabox

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[merge "npm-merge-driver"]
  name = automatically merge npm lockfiles
  driver = npx npm-merge-driver merge %A %O %B %P
[diff-so-fancy]
  markEmptyLines = false
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
